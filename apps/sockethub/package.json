		"rss",
		"atom",
		"twitter",
		"smtp",
		"imap",
		"email"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sockethub/sockethub.git",
		"directory": "apps/sockethub"
	},
	"homepage": "https://sockethub.org",
	"dependencies": {
		"@sockethub/server": "5.0.0-alpha.1",
		"@sockethub/platform-dummy": "^3.0.0-alpha.1",
		"@sockethub/platform-feeds": "^3.0.0-alpha.1",
		"@sockethub/platform-irc": "^4.0.0-alpha.1",
		"@sockethub/platform-xmpp": "^5.0.0-alpha.1"
	},
	"scripts": {
		"build": "node build.js && test -f sockethub.config.json",
