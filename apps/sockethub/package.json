{
	"name": "sockethub",
	"description": "A polyglot messaging service",
	"version": "5.0.0-alpha.1",
	"private": false,
	"author": "Nick Jennings <nick@silverbucket.net>",
	"license": "LGPL-3.0+",
	"main": "",
	"bin": "bin/sockethub",
	"preferGlobal": true,
	"keywords": [
		"sockethub",
		"messaging",
		"polyglot",
