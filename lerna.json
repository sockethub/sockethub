{
  "packages": ["packages/*"],
  "npmClient": "bun",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelog": false,
      "message": "chore(release): prepare %s",
      "ignoreChanges": ["**/*.md", "**/*.test.ts", "**/test/**"]
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
