#!/usr/bin/env node

process.on('uncaughtException', (err) => {
  console.log(`\nUNCAUGHT EXCEPTION\n`);
  console.log(err.stack);
  process.exit(1);
});

const baseDir = process.env.PROD ? 'dist' : 'src';
const Sockethub = require(`../${baseDir}/sockethub`);
const sockethub = new Sockethub();
sockethub.boot();
