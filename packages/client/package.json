{
  "name": "@sockethub/client",
  "version": "5.0.0-alpha.4",
  "description": "A JavaScript client for the Sockethub protocol gateway",
  "keywords": [
    "sockethub",
    "messaging",
    "activitystreams",
    "activity",
    "streams",
    "protocol",
    "client"
  ],
  "main": "./build/cjs/sockethub-client.js",
  "module": "./build/esm/sockethub-client.js",
  "types": "./build/esm/sockethub-client.d.ts",
  "exports": {
    "./dist/sockethub-client.js": "./dist/sockethub-client.js",
    "./dist/sockethub-client.js.map": "./dist/sockethub-client.js.map",
    ".": {
      "import": {
        "node": "./build/esm/sockethub-client.js",
        "default": "./build/esm/sockethub-client.js"
      },
      "require": "./build/cjs/sockethub-client.js",
      "types": "./build/esm/sockethub-client.d.ts"
    }
  },
  "files": [
    "dist/",
    "build/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/client"
  },
  "homepage": "https://github.com/sockethub/sockethub/tree/master/packages/client",
  "scripts": {
    "clean": "npx rimraf dist coverage",
    "clean:deps": "npx rimraf node_modules",
    "compliance": "yarn run lint && yarn run test && yarn run coverage",
    "release": "yarn run build && yarn run lint && yarn run test",
    "test": "yarn run build && yarn run test:node",
    "test:node": "c8 -x \"src/**/*.test.*\" mocha -r ts-node/register ./src/**/*.test.ts",
    "test:node:lcov": "c8 -r lcov mocha -r ts-node/register ./src/**/*.test.ts",
    "coverage": "c8 check-coverage --statements 85 --branches 84 --functions 90 --lines 85",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --fix \"**/*.ts\"",
    "compile": "rimraf ./build && tsc -p config/tsconfig.cjs.json && tsc -p config/tsconfig.esm.json",
    "build": "yarn run compile && rollup -c config/rollup.config.esm.mjs && rollup -c config/rollup.config.umd.mjs"
  },
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-object-assign": "^7.18.6",
    "@babel/preset-env": "^7.19.4",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@sockethub/activity-streams": "^4.4.0-alpha.4",
    "@sockethub/schemas": "^3.0.0-alpha.4",
    "@types/chai": "4.3.3",
    "@types/eslint": "8.4.6",
    "@types/eventemitter2": "4.1.0",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.21",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/parser": "5.37.0",
    "c8": "7.12.0",
    "chai": "4.3.6",
    "eslint": "8.23.1",
    "eslint-cli": "1.1.1",
    "mocha": "10.0.0",
    "proxyquire": "2.1.3",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "14.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "eventemitter2": "^6.4.9"
  }
}
