{
  "name": "@sockethub/client",
  "version": "5.0.0-alpha.4",
  "description": "A JavaScript client for the Sockethub protocol gateway",
  "main": "./build/cjs/sockethub-client.js",
  "module": "./build/esm/sockethub-client.js",
  "types": "./build/esm/sockethub-client.d.ts",
  "exports": {
    "./dist/sockethub-client.js": "./dist/sockethub-client.js",
    "./dist/sockethub-client.js.map": "./dist/sockethub-client.js.map",
    ".": {
      "import": {
        "node": "./build/esm/sockethub-client.js",
        "default": "./build/esm/sockethub-client.js"
      },
      "require": "./build/cjs/sockethub-client.js",
      "types": "./build/esm/sockethub-client.d.ts"
    }
  },
  "files": [
    "dist/",
    "build/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/client"
  },
  "homepage": "https://github.com/sockethub/sockethub/tree/master/packages/client",
  "scripts": {
    "clean": "npx rimraf build dist coverage",
    "clean:deps": "npx rimraf node_modules",
    "compliance": "yarn lint && yarn test && yarn coverage",
    "test": "yarn test:node",
    "test:node": "c8 -x \"**/*.test.ts\" mocha -r ts-node/register ./src/**/*.test.ts",
    "test:node:lcov": "c8 -r lcov mocha -r ts-node/register ./src/**/*.test.ts",
    "coverage": "c8 check-coverage --statements 85 --branches 84 --functions 85 --lines 85",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --fix \"**/*.ts\"",
    "compile": "rimraf build dist && tsc -p config/tsconfig.cjs.json && tsc -p config/tsconfig.esm.json",
    "build": "yarn compile && rollup -c config/rollup.config.esm.mjs && rollup -c config/rollup.config.umd.mjs"
  },
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-object-assign": "^7.18.6",
    "@babel/preset-env": "^7.19.4",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/chai": "4.3.4",
    "@types/eslint": "8.4.10",
    "@types/mocha": "10.0.1",
    "@types/node": "18.11.18",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/parser": "5.47.1",
    "c8": "7.12.0",
    "chai": "4.3.7",
    "eslint": "8.30.0",
    "eslint-cli": "1.1.1",
    "mocha": "10.2.0",
    "proxyquire": "2.1.3",
    "rollup": "^3.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "15.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@sockethub/activity-streams": "^4.4.0-alpha.4",
    "@sockethub/schemas": "^3.0.0-alpha.4",
    "eventemitter3": "^5.0.0"
  },
  "keywords": [
    "sockethub",
    "messaging",
    "activitystreams",
    "activity",
    "streams",
    "protocol",
    "client"
  ]
}
