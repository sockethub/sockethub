{
  "name": "@sockethub/schemas",
  "description": "JSON schema files for validating Sockethub Activity Streams",
  "version": "3.0.0-alpha.5",
  "exports": "./src/index.ts",
  "license": "MIT",
  "tasks": {
    "build": "deno run --allow-read --allow-write scripts/export-json-schema.ts",
    "threshold": "deno coverage && bash ./scripts/threshold.sh",
    "test": "deno test --coverage --allow-env --clean src/**/*.test.ts && deno task threshold"
  },
  "imports": {
    "@types/node": "npm:@types/node@^22.5.0",
    "ajv": "npm:ajv@^8.12.0",
    "ajv-formats": "npm:ajv-formats@^2.1.1",
    "ajv-formats-draft2019": "npm:ajv-formats-draft2019@^1.6.1",
    "debug": "npm:debug@^4.3.4"
  }
}
