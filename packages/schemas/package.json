{
  "name": "@sockethub/schemas",
  "description": "JSON schema files for validating Sockethub Activity Streams",
  "version": "3.0.0-alpha.11",
  "type": "module",
  "private": false,
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schemas/json/sockethub-config.json": {
      "default": "./src/schemas/json/sockethub-config.json"
    }
  },
  "files": [
    "src/",
    "dist/"
  ],
  "engines": {
    "bun": ">=1.2"
  },
  "keywords": [
    "sockethub",
    "sockethub schema",
    "activity streams",
    "activity objects",
    "sockethub platforms"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/schemas"
  },
  "homepage": "https://github.com/sockethub/sockethub/tree/master/packages/schemas",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "scripts": {
    "build": "bun ./scripts/export-json-schema.ts && bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external",
    "clean": "rm -rf dist",
    "clean:deps": "rm -rf node_modules"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.0",
    "ajv-formats-draft2019": "^1.6.1"
  },
  "gitHead": "f7fb4fa2599da1def438c710ce81a41b6cfee8a7"
}
