{
  "name": "@sockethub/platform-xmpp",
  "description": "A sockethub platform module implementing XMPP functionality",
  "version": "5.0.0-alpha.7",
  "private": false,
  "type": "module",
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "bun": "./src/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": ["src/", "dist/"],
  "engines": {
    "bun": ">=1.2"
  },
  "keywords": [
    "sockethub",
    "messaging",
    "activitystreams",
    "activity",
    "streams",
    "protocol",
    "xmpp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/platform-xmpp"
  },
  "homepage": "https://github.com/sockethub/sockethub/tree/master/packages/platform-xmpp",
  "scripts": {
    "build": "bun build src/index.js --outdir dist --target node --format esm --sourcemap=external",
    "clean": "rm -rf dist",
    "doc": "jsdoc2md --no-gfm --heading-depth 1 src/index.js > API.md"
  },
  "dependencies": {
    "@xmpp/client": "^0.13.1"
  },
  "devDependencies": {
    "@sockethub/schemas": "^3.0.0-alpha.7",
    "@xmpp/xml": "0.13.3",
    "jsdoc-to-markdown": "8.0.0",
    "sinon": "17.0.1"
  },
  "peerDependencies": {
    "@sockethub/server": "5.0.0-alpha.6"
  },
  "peerDependenciesMeta": {
    "@sockethub/server": {
      "optional": true
    }
  },
  "gitHead": "b5931fff768dd9be9093df5c01a4fee9fa88068f"
}
