{
    "name": "@sockethub/activity-streams",
    "version": "4.4.0-alpha.4",
    "description": "A simple tool to facilitate handling and referencing activity streams without unnecessary verbosity",
    "type": "module",
    "main": "./src/activity-streams.ts",
    "exports": {
        "./dist/activity-streams.js": "./dist/activity-streams.js"
    },
    "files": [
        "dist/",
        "build/"
    ],
    "dependencies": {
        "eventemitter3": "5.0.1"
    },
    "devDependencies": {
        "@babel/core": "7.23.5",
        "@types/bun": "latest",
        "@types/mocha": "latest",
        "@babel/plugin-transform-object-assign": "7.23.3",
        "@babel/preset-env": "7.23.5",
        "@rollup/plugin-babel": "6.0.4",
        "@rollup/plugin-commonjs": "25.0.7",
        "@rollup/plugin-multi-entry": "6.0.1",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@rollup/plugin-terser": "0.4.4",
        "@sockethub/schemas": "workspace:*",
        "c8": "8.0.1",
        "chai": "4.3.10",
        "karma": "6.4.2",
        "karma-chai": "0.1.0",
        "karma-chrome-launcher": "3.2.0",
        "karma-firefox-launcher": "2.1.2",
        "karma-mocha": "^2.0.1",
        "mocha": "10.2.0",
        "rollup": "4.22.4",
        "tsx": "4.7.2",
        "typescript": "5.3.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sockethub/sockethub.git",
        "directory": "packages/activity-streams"
    },
    "scripts": {
        "build": "bun build src/*.ts --outdir dist/",
        "clean": "rm -rf dist coverage",
        "coverage": "c8 check-coverage --statements 95 --functions 90 --branches 90 --lines 95",
        "test": "bun run test:node && bun run test:browser && bun run coverage",
        "test:browser": "karma start --single-run --browsers ChromeHeadless karma.config.cjs",
        "test:node": "NODE_OPTIONS='--import=tsx' c8 -x \"**/*.test.ts\" mocha ./src/**/*.test.ts",
        "test:node:lcov": "NODE_OPTIONS='--import=tsx' c8 -r lcov mocha ./src/**/*.test.ts"
    },
    "keywords": [
        "activity",
        "streams",
        "json-ld",
        "activity-streams"
    ],
    "author": "Nick Jennings <nick@silverbucket.net>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sockethub/sockethub/issues"
    },
    "homepage": "https://github.com/sockethub/sockethub/tree/master/packages/activity-streams"
}
