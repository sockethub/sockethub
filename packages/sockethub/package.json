{
  "name": "sockethub",
  "description": "A polyglot messaging service",
  "version": "4.1.0",
  "private": false,
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "main": "./dist/sockethub.js",
  "bin": "./bin/sockethub",
  "preferGlobal": true,
  "keywords": [
    "sockethub",
    "messaging",
    "polyglot",
    "unhosted",
    "apis",
    "api",
    "protocols",
    "protocol",
    "irc",
    "xmpp",
    "facebook",
    "rss",
    "atom",
    "twitter",
    "smtp",
    "imap",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/sockethub"
  },
  "homepage": "https://sockethub.org",
  "dependencies": {
    "activity-streams": "^4.3.8",
    "ajv": "^8.6.2",
    "ajv-formats-draft2019": "^1.6.1",
    "body-parser": "^1.19.0",
    "bull": "^4.0.0",
    "debug": "^4.3.1",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "findup-sync": "^5.0.0",
    "jquery": "^3.4.1",
    "nconf": "^0.11.2",
    "object-hash": "^2.0.1",
    "secure-store-redis": "^1.4.7",
    "socket.io": "^4.0.1",
    "sockethub-platform-dummy": "^2.1.1",
    "sockethub-platform-feeds": "^2.2.1",
    "sockethub-platform-irc": "^3.6.2",
    "sockethub-platform-xmpp": "^4.1.0",
    "sockethub-schemas": "^2.1.1",
    "urijs": "^1.19.2"
  },
  "scripts": {
    "compliance": "yarn run lint && yarn run test && yarn run coverage",
    "test": "c8 -x src/bootstrap -x \"src/**/*.test.*\" mocha -r ts-node/register src/*.test.ts src/**/*.test.ts",
    "coverage": "c8 check-coverage --statements 95 --branches 85 --functions 90 --lines 95",
    "start": "DEBUG=sockethub* ./bin/sockethub",
    "dev": "yarn run build && DEBUG=sockethub* ./bin/sockethub --examples",
    "lint": "eslint \"**/*.ts\" ./bin/sockethub",
    "lint:fix": "eslint --fix \"**/*.ts\" ./bin/sockethub",
    "clean": "find . -maxdepth 1 -name dist -exec rm -rv {} +",
    "build": "yarn run clean && yarn run build:server && yarn run build:client",
    "build:server": "tsc && cp ./src/defaults.json ./dist/defaults.json && cp src/bootstrap/platforms.js dist/bootstrap/",
    "build:client": "webpack --config webpack.minified.config.js && webpack --config webpack.normal.config.js"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.0",
    "@types/debug": "4.1.7",
    "@types/ejs": "3.1.0",
    "@types/eslint": "8.2.1",
    "@types/express": "4.17.13",
    "@types/jquery": "3.5.11",
    "@types/mocha": "9.0.0",
    "@types/nconf": "0.10.1",
    "@types/node": "16.11.17",
    "@types/object-hash": "2.2.1",
    "@types/tv4": "1.2.31",
    "@types/urijs": "1.19.17",
    "@typescript-eslint/parser": "5.8.0",
    "c8": "7.10.0",
    "chai": "4.3.4",
    "eslint": "8.5.0",
    "eslint-cli": "1.1.1",
    "eventemitter2": "^6.4.4",
    "jaribu": "2.2.3",
    "mocha": "9.1.3",
    "proxyquire": "2.1.3",
    "sinon": "12.0.1",
    "ts-node": "10.4.0",
    "typescript": "4.5.4",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.8.0"
  }
}
