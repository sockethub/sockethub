{
  "name": "sockethub",
  "description": "A polyglot messaging service",
  "version": "3.2.0-alpha.0",
  "private": false,
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "main": "./dist/sockethub.js",
  "bin": "./bin/sockethub",
  "preferGlobal": true,
  "keywords": [
    "sockethub",
    "messaging",
    "polyglot",
    "unhosted",
    "apis",
    "api",
    "protocols",
    "protocol",
    "irc",
    "xmpp",
    "facebook",
    "rss",
    "atom",
    "twitter",
    "smtp",
    "imap",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/sockethub/sockethub.git"
  },
  "homepage": "http://github.com/sockethub/sockethub",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/debug": "^4.1.5",
    "@types/ejs": "^3.0.0",
    "@types/eslint": "^7.2.5",
    "@types/express": "^4.17.9",
    "@types/jquery": "^3.5.4",
    "@types/kue": "^0.11.13",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.14.8",
    "@types/object-hash": "^1.3.0",
    "@types/socket.io": "^2.1.8",
    "@types/supports-color": "^7.2.0",
    "@types/tv4": "^1.2.29",
    "@types/urijs": "^1.19.13",
    "activity-streams": "^4.3.2",
    "body-parser": "^1.19.0",
    "debug": "^4.3.1",
    "ejs": "^3.0.1",
    "espree": "^7.3.0",
    "express": "^4.17.1",
    "findup-sync": "^4.0.0",
    "jquery": "^3.4.1",
    "kue": "^0.11.6",
    "nconf": "^0.10.0",
    "object-hash": "^2.0.1",
    "rand-token": "^1.0.1",
    "secure-store-redis": "^1.4.3",
    "socket.io": "^2.3.0",
    "sockethub-platform-dummy": "^2.0.1",
    "sockethub-platform-feeds": "^2.0.2",
    "sockethub-platform-irc": "^3.4.2",
    "sockethub-platform-xmpp": "^3.2.2-alpha.0",
    "sockethub-schemas": "^2.0.1",
    "source-map-loader": "^1.1.2",
    "supports-color": "^7.1.0",
    "tv4": "^1.3.0",
    "urijs": "^1.19.2"
  },
  "scripts": {
    "test": "yarn run build && jaribu && jest --coverage",
    "start": "yarn run build && DEBUG=sockethub* ./bin/sockethub",
    "dev": "yarn run build && DEBUG=sockethub* ./bin/sockethub --examples",
    "dev-old": "DEBUG=sockethub* DEV=1 ts-node --pretty --skip-ignore -T -P ./src/tsconfig.json ./bin/sockethub --examples",
    "compliance": "yarn run build && eslint --ignore-pattern \"coverage/*\" \"**/*.ts\" ./bin/sockethub && c8 jaribu && jest --coverage",
    "coverage": "c8 jaribu",
    "lint": "eslint --ignore-pattern \"coverage\" \"src/*.js\" ./bin/sockethub",
    "lint:fix": "eslint --ignore-pattern \"coverage\" --fix \"**/*.js\" ./bin/sockethub",
    "tsc": "tsc -p src",
    "build": "tsc -p src && cp ./src/defaults.json ./dist/defaults.json",
    "travis": "yarn run compliance"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/parser": "^4.8.1",
    "c8": "7.3.5",
    "eslint": "^7.13.0",
    "eslint-cli": "^1.1.1",
    "jaribu": "^2.2.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
