{
  "name": "@sockethub/server",
  "description": "A polyglot messaging service, server libraries",
  "version": "5.0.0-alpha.7",
  "type": "module",
  "private": false,
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": ["src/", "dist/", "bin/", "res/"],
  "bin": "bin/sockethub",
  "preferGlobal": true,
  "engines": {
    "bun": ">=1.2.4"
  },
  "keywords": [
    "sockethub",
    "messaging",
    "polyglot",
    "unhosted",
    "apis",
    "api",
    "protocols",
    "protocol",
    "irc",
    "xmpp",
    "facebook",
    "rss",
    "atom",
    "twitter",
    "smtp",
    "imap",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/server"
  },
  "homepage": "https://sockethub.org",
  "dependencies": {
    "@sentry/bun": "^10.15.0",
    "@sockethub/activity-streams": "^4.4.0-alpha.7",
    "@sockethub/client": "^5.0.0-alpha.7",
    "@sockethub/crypto": "^1.0.0-alpha.7",
    "@sockethub/data-layer": "^1.0.0-alpha.7",
    "@sockethub/schemas": "^3.0.0-alpha.7",
    "body-parser": "1.20.3",
    "chalk": "^5.3.0",
    "debug": "4.3.4",
    "ejs": "3.1.10",
    "express": "4.20.0",
    "express-rate-limit": "^8.2.1",
    "jquery": "3.7.1",
    "nconf": "0.12.1",
    "socket.io": "4.7.5"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external",
    "clean": "rm -rf dist",
    "dev": "DEBUG=sockethub* bun run --hot ./bin/sockethub --examples",
    "start": "DEBUG=sockethub* bun run ./bin/sockethub"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.5",
    "@types/bun": "latest",
    "@types/debug": "4.1.12",
    "@types/express": "4.17.21",
    "@types/jquery": "3.5.29",
    "@types/nconf": "0.10.6",
    "@types/sinon": "17.0.2",
    "jaribu": "2.2.3",
    "sinon": "17.0.1",
    "web-streams-polyfill": "^3.3.3"
  },
  "optionalDependencies": {
    "@sockethub/examples": "^1.0.0-alpha.7",
    "@sockethub/platform-dummy": "^3.0.0-alpha.7",
    "@sockethub/platform-feeds": "^4.0.0-alpha.7",
    "@sockethub/platform-irc": "^4.0.0-alpha.7",
    "@sockethub/platform-metadata": "^1.0.1-alpha.2",
    "@sockethub/platform-xmpp": "^5.0.0-alpha.7"
  },
  "gitHead": "b5931fff768dd9be9093df5c01a4fee9fa88068f"
}
