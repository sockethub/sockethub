{
  "name": "@sockethub/server",
  "description": "A polyglot messaging service, server libraries",
  "version": "5.0.0-alpha.4",
  "private": false,
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "main": "dist/index.js",
  "bin": "bin/sockethub",
  "preferGlobal": true,
  "keywords": [
    "sockethub",
    "messaging",
    "polyglot",
    "unhosted",
    "apis",
    "api",
    "protocols",
    "protocol",
    "irc",
    "xmpp",
    "facebook",
    "rss",
    "atom",
    "twitter",
    "smtp",
    "imap",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/server"
  },
  "homepage": "https://sockethub.org",
  "dependencies": {
    "@sockethub/activity-streams": "workspace:^",
    "@sockethub/client": "workspace:^",
    "@sockethub/crypto": "workspace:^",
    "@sockethub/data-layer": "workspace:^",
    "@sockethub/schemas": "workspace:^",
    "body-parser": "^1.20.2",
    "debug": "^4.3.4",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "jquery": "^3.6.4",
    "nconf": "^0.12.0",
    "npm": "9.6.3",
    "socket.io": "^4.6.1"
  },
  "scripts": {
    "clean": "rm -rf dist coverage",
    "compliance": "pnpm lint && pnpm test && pnpm coverage",
    "test": "c8 -x src/bootstrap -x \"src/**/*.test.*\" mocha -r ts-node/register src/*.test.ts src/**/*.test.ts",
    "coverage": "c8 check-coverage --statements 90 --branches 80 --functions 82 --lines 90",
    "start": "DEBUG=sockethub* ./bin/sockethub",
    "dev": "pnpm build && DEBUG=sockethub* ./bin/sockethub --examples",
    "lint": "eslint \"**/*.ts\" ./bin/sockethub",
    "lint:fix": "eslint --fix \"**/*.ts\" ./bin/sockethub",
    "build": "pnpm clean && tsc && cp ./src/defaults.json ./dist/defaults.json"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/chai": "4.3.4",
    "@types/debug": "4.1.7",
    "@types/eslint": "8.37.0",
    "@types/express": "4.17.17",
    "@types/jquery": "3.5.16",
    "@types/mocha": "10.0.1",
    "@types/nconf": "0.10.3",
    "@types/node": "18.15.11",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/parser": "5.57.0",
    "c8": "7.13.0",
    "chai": "4.3.7",
    "eslint": "8.37.0",
    "eslint-cli": "1.1.1",
    "jaribu": "2.2.3",
    "mocha": "10.2.0",
    "proxyquire": "2.1.3",
    "sinon": "15.0.3",
    "ts-node": "10.9.1",
    "typescript": "5.0.3"
  },
  "optionalDependencies": {
    "@sockethub/examples": "workspace:^",
    "@sockethub/platform-dummy": "workspace:^",
    "@sockethub/platform-feeds": "workspace:^",
    "@sockethub/platform-irc": "workspace:^",
    "@sockethub/platform-xmpp": "workspace:^"
  }
}
