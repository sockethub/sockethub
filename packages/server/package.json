{
  "name": "@sockethub/server",
  "description": "A polyglot messaging service, server libraries",
  "version": "5.0.0-alpha.7",
  "type": "module",
  "private": false,
  "author": "Nick Jennings <nick@silverbucket.net>",
  "license": "LGPL-3.0+",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": ["src/", "dist/", "bin/", "res/"],
  "bin": "bin/sockethub",
  "preferGlobal": true,
  "engines": {
    "bun": ">=1.2.4"
  },
  "keywords": [
    "sockethub",
    "messaging",
    "polyglot",
    "unhosted",
    "apis",
    "api",
    "protocols",
    "protocol",
    "irc",
    "xmpp",
    "facebook",
    "rss",
    "atom",
    "twitter",
    "smtp",
    "imap",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sockethub/sockethub.git",
    "directory": "packages/server"
  },
  "homepage": "https://sockethub.org",
  "dependencies": {
    "@sentry/bun": "^10.36.0",
    "@sockethub/activity-streams": "^4.4.0-alpha.7",
    "@sockethub/client": "^5.0.0-alpha.7",
    "@sockethub/crypto": "^1.0.0-alpha.7",
    "@sockethub/data-layer": "^1.0.0-alpha.7",
    "@sockethub/schemas": "^3.0.0-alpha.7",
    "body-parser": "^1.20.4",
    "chalk": "^5.6.2",
    "debug": "^4.4.3",
    "ejs": "^3.1.10",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "jquery": "^3.7.1",
    "nconf": "^0.12.1",
    "socket.io": "^4.7.5"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external && cp src/defaults.json dist/defaults.json",
    "clean": "rm -rf dist",
    "dev": "DEBUG=sockethub* bun run --hot ./bin/sockethub --examples",
    "start": "DEBUG=sockethub* bun run ./bin/sockethub"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.25",
    "@types/jquery": "^3.5.33",
    "@types/nconf": "^0.10.7",
    "@types/sinon": "^17.0.4",
    "jaribu": "^2.2.3",
    "sinon": "^17.0.2",
    "web-streams-polyfill": "^3.3.3"
  },
  "optionalDependencies": {
    "@sockethub/examples": "^1.0.0-alpha.7",
    "@sockethub/platform-dummy": "^3.0.0-alpha.7",
    "@sockethub/platform-feeds": "^4.0.0-alpha.7",
    "@sockethub/platform-irc": "^4.0.0-alpha.7",
    "@sockethub/platform-metadata": "^1.0.1-alpha.2",
    "@sockethub/platform-xmpp": "^5.0.0-alpha.7"
  },
  "gitHead": "e69e26b98c4bce1279aae4dc356b9a0f7e7de659"
}
