{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@nrwl/cli": "latest",
    "@nrwl/node": "14.7.5",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/tao": "latest",
    "@nrwl/workspace": "latest",
    "@types/mocha": "9.1.1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "5.37.0",
    "chai": "4.3.6",
    "eslint": "8.23.1",
    "eslint-plugin-security-node": "1.1.1",
    "find-up": "6.3.0",
    "karma": "6.4.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-firefox-launcher": "2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "lerna": "5.5.1",
    "mocha": "10.0.0",
    "typescript": "4.8.3",
    "yarn": "1.22.19"
  },
  "scripts": {
    "postinstall": "lerna bootstrap && nx run-many --target=build --skip-nx-cache",
    "publish": "yarn run build && yarn run compliance && lerna publish --dist-tag latest --pre-dist-tag next",
    "test": "nx run-many --target=test --all --skip-nx-cache",
    "coverage": "nx run-many --target=coverage --all",
    "clean": "nx run-many --target=clean --all",
    "clean:deps": "nx run-many --target=clean:deps --all && npx rimraf node_modules",
    "compliance": "nx run-many --target=compliance --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint:fix --all",
    "build": "nx run-many --target=build --all",
    "dev": "yarn run build && cd packages/sockethub && yarn run dev",
    "start": "cd packages/sockethub && yarn run start",
    "integration": "yarn run integration:setup && yarn run integration:run; RES=$?; if [[ \"$RES\" != \"0\" ]]; then yarn run integration:log; fi; yarn run integration:teardown; exit $RES",
    "integration:single": "yarn run integration:setup && yarn run integration:run:single; RES=$?; if [[ \"$RES\" != \"0\" ]]; then yarn run integration:log; fi; yarn run integration:teardown; exit $RES",
    "integration:run:single": "karma start --single-run --browsers FirefoxHeadless ./karma.config.js",
    "integration:run": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless ./karma.config.js",
    "integration:log": "docker logs sockethub-sockethub-1",
    "integration:setup": "docker compose -f docker-compose.yml up -d",
    "integration:teardown": "docker compose stop",
    "integration:clean": "docker rm sockethub-sockethub-1 sockethub-redis-1 sockethub-prosody-1; docker rmi sockethub_sockethub"
  },
  "dependencies": {
    "@nrwl/js": "14.7.5",
    "tslib": "2.4.0"
  }
}
