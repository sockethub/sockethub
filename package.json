{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@nrwl/cli": "latest",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/tao": "latest",
    "@nrwl/workspace": "latest",
    "@types/mocha": "9.1.0",
    "@typescript-eslint/parser": "5.12.1",
    "chai": "4.3.6",
    "eslint": "8.9.0",
    "eslint-plugin-security-node": "1.1.1",
    "find-up": "6.3.0",
    "karma": "6.3.16",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-firefox-launcher": "2.1.2",
    "karma-mocha": "2.0.1",
    "lerna": "4.0.0",
    "mocha": "9.2.1",
    "typescript": "4.5.5",
    "yarn": "1.22.17"
  },
  "scripts": {
    "deps": "yarn install && lerna bootstrap",
    "publish": "yarn run build && yarn run compliance && lerna publish --dist-tag latest --pre-dist-tag next",
    "test": "nx affected:test --parallel=2 --base=origin/master",
    "coverage": "nx affected:coverage --parallel=2 --base=origin/master",
    "clean": "nx affected:clean --parallel=2 --base=origin/master",
    "compliance": "nx affected:compliance --parallel=2 --base=origin/master",
    "lint": "nx affected:lint --base=origin/master --plain",
    "lint:fix": "nx affected --target=lint:fix --parallel=2 --base=origin/master",
    "build": "nx affected:build --parallel=2 --base=origin/master",
    "dev": "[[ -f config.json ]] && cp config.json packages/server/; cd packages/server && yarn run dev",
    "start": "[[ -f config.json ]] && cp config.json packages/server/; cd packages/server && yarn run start",
    "start:defaults": "cd packages/server && yarn run start",
    "integration": "yarn run integration:setup && yarn run integration:run; RES=$?; if [[ \"$RES\" != \"0\" ]]; then yarn run integration:log; fi; yarn run integration:teardown; exit $RES",
    "integration:run": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless ./karma.config.js",
    "integration:log": "docker logs sockethub-sockethub-1",
    "integration:setup": "docker compose -f docker-compose.yml up -d",
    "integration:teardown": "docker compose stop",
    "integration:clean": "docker rm sockethub-sockethub-1 sockethub-redis-1 sockethub-prosody-1; docker rmi sockethub_sockethub"
  },
  "dependencies": {
    "@nrwl/js": "^13.8.4"
  }
}
