{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/parser": "4.24.0",
    "chai": "^4.3.4",
    "eslint": "7.27.0",
    "find-up": "5.0.0",
    "karma": "^6.3.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-html": "^1.0.5",
    "karma-mocha": "^2.0.1",
    "lerna": "4.0.0",
    "mocha": "^8.4.0",
    "typescript": "4.2.4",
    "yarn": "1.22.10"
  },
  "scripts": {
    "version": "lerna run build",
    "install": "lerna bootstrap",
    "test": "lerna run test",
    "lint:js": "eslint '**/*.ts' '**/*.js' ./packages/sockethub/bin/sockethub",
    "lint:fix": "yarn run lint:js --fix",
    "travis": "yarn run lint:js && lerna run travis",
    "build": "lerna run build",
    "dev": "[[ -f config.json ]] && cp config.json packages/sockethub/; cd packages/sockethub && yarn run dev",
    "start": "[[ -f config.json ]] && cp config.json packages/sockethub/; cd packages/sockethub && yarn run start",
    "integration": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless ./karma.config.js"
  }
}
