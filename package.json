{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@types/mocha": "10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "chai": "4.3.7",
    "eslint": "8.37.0",
    "eslint-plugin-security-node": "1.1.1",
    "find-up": "6.3.0",
    "karma": "6.4.1",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-firefox-launcher": "2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "10.2.0",
    "nx": "15.9.2",
    "typescript": "5.0.3"
  },
  "scripts": {
    "build": "nx run-many --target=build --all --parallel 1",
    "clean": "pnpm run --parallel -r clean",
    "clean:deps": "pnpm run --parallel -r clean:deps && npx rimraf node_modules",
    "compliance": "pnpm build && nx run-many --target=compliance --all",
    "coverage": "nx run-many --target=coverage",
    "dev": "pnpm build && pnpm --filter sockethub dev",
    "integration": "pnpm integration:docker:build && pnpm integration:run; RES=$?; pnpm integration:docker:stop; exit $RES",
    "integration:docker:build": "docker compose -f docker-compose.yml up -d",
    "integration:docker:clean:all": "pnpm integration:docker:stop && docker rm sockethub-sockethub-1 sockethub-redis-1 sockethub-prosody-1; docker rmi sockethub_sockethub",
    "integration:docker:clean:sockethub": "pnpm integration:docker:stop && docker rm sockethub-sockethub-1; docker rmi sockethub-sockethub",
    "integration:docker:logs": "docker logs sockethub-sockethub-1",
    "integration:docker:stop": "docker compose stop",
    "integration:docker:rebuild": "pnpm integration:docker:clean:sockethub && pnpm integration:docker:build",
    "integration:run": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless ./karma.config.js",
    "lint": "nx run-many --target=lint",
    "lint:fix": "nx run-many --target=lint:fix",
    "postinstall": "pnpm build",
    "preinstall": "npx only-allow pnpm",
    "publish:latest": "pnpm clean && pnpm build && pnpm compliance && pnpm publish --tag latest --dry-run",
    "publish:next": "pnpm clean && pnpm build && pnpm compliance && pnpm publish --tag next --dry-run",
    "start": "pnpm --filter sockethub start",
    "test": "nx run-many --target=test"
  },
  "dependencies": {
    "tslib": "2.5.0"
  },
  "pnpm": {
    "overrides": {
      "secure-store-redis": "1.4.7"
    }
  }
}
