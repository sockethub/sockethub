{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/parser": "4.29.3",
    "chai": "^4.3.4",
    "eslint": "7.32.0",
    "eslint-plugin-security-node": "^1.0.14",
    "find-up": "6.0.0",
    "karma": "^6.3.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.1",
    "karma-mocha": "^2.0.1",
    "lerna": "4.0.0",
    "mocha": "^9.0.3",
    "typescript": "4.4.2",
    "yarn": "1.22.11"
  },
  "scripts": {
    "version": "lerna run build",
    "install": "lerna bootstrap",
    "test": "lerna run test",
    "coverage": "lerna run coverage",
    "compliance": "lerna run compliance",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "build": "lerna run build",
    "dev": "[[ -f config.json ]] && cp config.json packages/sockethub/; cd packages/sockethub && yarn run dev",
    "start": "[[ -f config.json ]] && cp config.json packages/sockethub/; cd packages/sockethub && yarn run start",
    "start:defaults": "cd packages/sockethub && yarn run start",
    "integration": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless ./karma.config.js"
  }
}
