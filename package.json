{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@nrwl/cli": "^15.2.1",
    "@nrwl/node": "14.8.6",
    "@nrwl/nx-cloud": "^15.0.2",
    "@nrwl/tao": "^15.2.1",
    "@nrwl/workspace": "^15.2.1",
    "@types/mocha": "10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "5.43.0",
    "chai": "4.3.7",
    "eslint": "8.28.0",
    "eslint-plugin-security-node": "1.1.1",
    "find-up": "6.3.0",
    "karma": "6.4.1",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-firefox-launcher": "2.1.2",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "lerna": "6.0.3",
    "mocha": "10.1.0",
    "typescript": "4.9.3",
    "yarn": "1.22.19"
  },
  "scripts": {
    "postinstall": "lerna bootstrap && nx run-many --target=build --skip-nx-cache",
    "publish": "yarn build && yarn compliance && lerna publish --dist-tag latest --pre-dist-tag next",
    "test": "yarn build && nx run-many --target=test --all --skip-nx-cache",
    "coverage": "nx run-many --target=coverage --all",
    "clean": "nx run-many --target=clean --all",
    "clean:deps": "nx run-many --target=clean:deps --all && npx rimraf node_modules",
    "compliance": "yarn build && nx run-many --target=compliance --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint:fix --all",
    "build": "nx run-many --target=build --all",
    "dev": "yarn build && cd packages/sockethub && yarn dev",
    "start": "cd packages/sockethub && yarn start",
    "integration": "yarn integration:setup && yarn integration:run; RES=$?; if [[ \"$RES\" != \"0\" ]]; then yarn integration:log; fi; yarn integration:teardown; exit $RES",
    "integration:single": "yarn integration:setup && yarn integration:run:single; RES=$?; if [[ \"$RES\" != \"0\" ]]; then yarn integration:log; fi; yarn integration:teardown; exit $RES",
    "integration:run:single": "karma start --single-run --browsers FirefoxHeadless ./karma.config.js",
    "integration:run": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless ./karma.config.js",
    "integration:log": "docker logs sockethub-sockethub-1",
    "integration:setup": "docker compose -f docker-compose.yml up -d",
    "integration:teardown": "docker compose stop",
    "integration:clean": "docker rm sockethub-sockethub-1 sockethub-redis-1 sockethub-prosody-1; docker rmi sockethub_sockethub"
  },
  "dependencies": {
    "@nrwl/js": "14.8.6",
    "tslib": "2.4.1"
  }
}
